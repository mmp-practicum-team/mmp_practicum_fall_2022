\usetheme[compress]{Berlin} % тема


% выбросить subsection из разметки
\defbeamertemplate*{headline}{miniframes theme no subsection}{ % https://tex.stackexchange.com/questions/220146/beamer-dresden-theme-remove-subsections
  \begin{beamercolorbox}[colsep=1.5pt]{upper separation line head}
  \end{beamercolorbox}
  \begin{beamercolorbox}{section in head/foot}
    \vskip2pt\insertnavigation{\paperwidth}\vskip2pt
  \end{beamercolorbox}%
%   \vspace{0.5pt} некрасиво
  \begin{beamercolorbox}[colsep=1.5pt]{lower separation line head}
  \end{beamercolorbox}
}

\setbeamertemplate{footline}{}  % убрать footline
\beamertemplatenavigationsymbolsempty  % выключить навигацию

% цвета
\definecolor{tborange}{RGB}{245, 120, 0}
\definecolor{graybg}{RGB}{235, 235, 235}
\definecolor{graytxt}{RGB}{117, 117, 117}
\setbeamercolor{title}{fg=white,bg=tborange}
\setbeamercolor{item}{fg=tborange}
\setbeamercolor{frametitle}{bg=graybg, fg=graytxt}
\setbeamercolor{section in head/foot}{bg=tborange,fg=white}
\setbeamercolor{block title}{bg=tborange}

% скруг
\setbeamertemplate{blocks}[rounded]

\usefonttheme{serif}
